    <meta name="author" content="">

    <title>Blog Post - Start Bootstrap Template</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    
    <!-- Custom styles for post single -->
    <link href="/css/blog-post.css" rel="stylesheet">
   
  </head>

  <body>

    <!-- Navigation -->
    {{>home/home-nav}}

    <!-- Page Content -->
    <div class="container">

      <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.lastName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateTime post.date 'MMMM Do YYYY hh:mm'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
          <p>{{post.body}}</p>

          <hr>
          
          {{#if post.allowComments}}
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments" method="post">
                <div class="form-group">
                  <textarea required name="body" class="form-control" rows="3"></textarea>
          
                  <input type="hidden" name="id" value="{{post._id}}">
          
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
          {{else}}
          <br>
          <h4>댓글 기능이 차단되어 있습니다</h4>
          <br>
          <hr>
          {{/if}}
          
          
        {{#each post.comments}}

          <!-- Single Comment -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.lastName}}</h5>
              {{body}}
            </div>
          </div>
        
