<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Post</th>
      <th scope="col">User</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
<tbody>

    {{#each comments}}
    <tr>
        <td>{{_id}}</td>
        <td>{{post.title}}</td>
        <td>{{user.lastName}}</td>
        <td>{{generateTime date 'MMMM Do YYYY'}}</td>
        <td>

                <form action = "/admin/comments/{{_id}}?_method=DELETE" method = "post">
                    <button type = "submit" class = "btn btn-danger">DELETE</button>
                
                </form>

        </td>
    </tr>
    {{/each}}
</tbody>

</table>